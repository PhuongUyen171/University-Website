@model TruongCNTP.Models.MONHOC
@{
    ViewBag.Title = "Sửa thông tin chi tiết môn học";
    Layout = "~/Views/Shared/layoutAdmin.cshtml";
}
<link href="../../Content/css/cssMain.css" rel="stylesheet" />
<h2 style="color:red;font-size:30px;text-align:center;margin-top:40px">SỬA CHI TIẾT MÔN HỌC</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table border="0" align="center">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.MaMH)
        <tr>
            <td style="font-weight:bold;text-align:left">Mã môn: </td>
            <td style="text-align:left">
                <div style="font:18px;padding:5px 0 0 5px">@Model.MaMH</div>
            </td>
        </tr>
        <tr>
            <td style="font-weight:bold;text-align:left">Tên môn:</td>
            <td style="text-align:left">
                @*@Html.EditorFor(m=>m.TENTL)
                    @Html.ValidationMessageFor(m=>m.TENTL)*@
                @Html.TextBoxFor(m => m.TenMH)
            </td>
        </tr>
    </table>
    <button type="submit">Lưu</button>
    <button>@Html.ActionLink("Trở về", "Index", "MonHoc")</button>
    <div style="color:red">@ViewData["Loi1"]</div>
}

