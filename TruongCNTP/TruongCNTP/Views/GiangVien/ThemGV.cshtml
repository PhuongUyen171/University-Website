@model TruongCNTP.Models.GIAOVIEN
@{
    ViewBag.Title = "Thêm giáo viên";
    Layout = "~/Views/Shared/layoutAdmin.cshtml";
}

<link href="../../Content/css/cssMain.css" rel="stylesheet" />
<h2 style="color:red;font-size:30px;text-align:center;margin-top:40px">THÊM MỚI GIÁO VIÊN</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table class="table" border="0" align="center" style="text-align:left">
        <tr>
            <td style="font-weight:bold">Tên giáo viên:</td>
            <td style="text-align:left">@Html.TextBox("tenGV")</td>@ViewData["Loi1"]
        </tr>
        <tr>
            <td style="font-weight:bold">Mã giáo viên:</td>
            <td style="text-align:left">@Html.TextBox("maGV")</td>@ViewData["Loi2"]
        </tr>
        <tr>
            <td style="font-weight:bold">Mã môn học:</td>
            <td style="text-align:left">@Html.DropDownList("MaMonHoc")</td>@ViewData["Loi3"]
        </tr>
    </table>
    <button type="submit">Tạo mới</button>
    <button>@Html.ActionLink("Trở về","GiaoVien","GiangVien")</button>
}

