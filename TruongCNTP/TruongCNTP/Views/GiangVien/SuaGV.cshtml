@model TruongCNTP.Models.GIAOVIEN
@{
    ViewBag.Title = "Sửa thông tin chi tiết giáo viên";
    Layout = "~/Views/Shared/layoutAdmin.cshtml";
}


<link href="../../Content/css/cssMain.css" rel="stylesheet" />
<h2 style="color:red;font-size:30px;text-align:center;margin-top:40px">SỬA CHI TIẾT GIÁO VIÊN</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<table border="0" align="center">
    @Html.ValidationSummary(true)
    @Html.HiddenFor(m => m.MaGV)
    <tr>
        <td style="font-weight:bold;text-align:left">Mã GV: </td>
        <td style="text-align:left">
            <div style="font:18px;padding:5px 0 0 5px">@Model.MaGV</div>
        </td>
    </tr>
    <tr>
        <td style="font-weight:bold;text-align:left">Tên GV:</td>
        <td style="text-align:left">
            @Html.TextBoxFor(m => m.TenGV)
        </td>
    </tr>
    <tr>
        <td style="font-weight:bold;text-align:left">Chuyên ngành: </td>
        <td style="text-align:left">
            @Html.DropDownList("MaKhoa")
        </td>
    </tr>
    <tr>
        <td style="font-weight:bold;text-align:left">Học vị: </td>
        <td style="text-align:left">
            @Html.TextBoxFor(m => m.HocVi)
        </td>
    </tr>
</table>
    <button type="submit">Lưu</button>
    <button>@Html.ActionLink("Trở về", "GiaoVien", "GiangVien")</button>
    <div style="color:red">@ViewData["Loi1"]</div>

}


