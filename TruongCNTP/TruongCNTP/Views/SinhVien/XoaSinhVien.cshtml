@model TruongCNTP.Models.SINHVIEN
@{
    ViewBag.Title = "Xóa thông tin sinh viên";
    Layout = "~/Views/Shared/layoutAdmin.cshtml";
}


<link href="../../Content/css/cssMain.css" rel="stylesheet" />
<h2 style="color:red;font-size:30px;text-align:center;margin-top:40px">XÓA THÔNG TIN CHI TIẾT CHƯƠNG TRÌNH</h2>

<fieldset>
    <legend><font color="green">Chắc chắn xóa chưa?<br />Hãy đảm bảo rằng chương trình được xóa đang rỗng!</font></legend>
    <div class="display-label">Mã SV: @Model.MaSV</div>
    <div class="display-label">Tên SV: @Model.TenSV</div>
    <div class="display-label">SĐT: @Model.SDT</div>
    <div class="display-label">Địa chỉ: @Model.DiaChi</div>
    <div class="display-label">Email: @Model.Email</div>
    <div class="display-label">Năm sinh: @Model.NamSinh</div>
    <div class="display-label">Lớp chuyên ngành: @Model.MaLop</div>
</fieldset>
@using (Html.BeginForm())
{
    <button type="submit">Xóa sinh viên này</button>
    <button>@Html.ActionLink("Trở về","Index","SinhVien")</button>
}
