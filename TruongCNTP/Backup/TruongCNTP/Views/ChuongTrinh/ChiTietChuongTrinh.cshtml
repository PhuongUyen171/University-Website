@model TruongCNTP.Models.CHUONGTRINH
@{
    ViewBag.Title = "Thông tin chi tiết chương trình";
    Layout = "~/Views/Shared/layoutAdmin.cshtml";
}


<link href="../../Content/css/cssMain.css" rel="stylesheet" />
<h2 style="color:red;font-size:30px;text-align:center;margin-top:40px">THÔNG TIN CHI TIẾT CHƯƠNG TRÌNH</h2>
<br />
<table class="table" border="0" align="center" style="text-align:left">
    <tr>
        <td style="font-weight:bold">Tên chương trình:</td>
        <td style="text-align:left">@Model.TenCT</td>
    </tr>
    <tr>
        <td style="font-weight:bold">Mã chương trình:</td>
        <td style="text-align:left">@Model.MaCT</td>
    </tr>
    
</table>
@using (Html.BeginForm()){
<button>@Html.ActionLink("Sửa", "SuaChuongTrinh", new { id = Model.MaCT})</button>
<button>@Html.ActionLink("Xóa", "XoaChuongTrinh", new { id = Model.MaCT})</button>
<button>@Html.ActionLink("Trở về","Index","ChuongTrinh")</button>
}
