@model TruongCNTP.Models.KHOAHOC
@{
    ViewBag.Title = "Thêm thông tin khóa học";
    Layout = "~/Views/Shared/layoutAdmin.cshtml";
}


<link href="../../Content/css/cssMain.css" rel="stylesheet" />
<h2 style="color:red;font-size:30px;text-align:center;margin-top:40px">THÊM MỚI KHÓA HỌC</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table class="table" border="0" align="center" style="text-align:left">
        <tr>
            <td style="font-weight:bold">Mã khóa học:</td>
            <td style="text-align:left">@Html.TextBox("maKhoaHoc")</td>@ViewData["Loi1"]
        </tr>
        <tr>
            <td style="font-weight:bold">Năm bắt đầu:</td>
            <td style="text-align:left">@Html.TextBox("nambd")</td>@ViewData["Loi2"]
        </tr>
        <tr>
            <td style="font-weight:bold">Năm kết thúc:</td>
            <td style="text-align:left">@Html.TextBox("namkt")</td>@ViewData["Loi3"]
        </tr>
        
    </table>
    <button type="submit">Tạo mới</button>
    <button>@Html.ActionLink("Trở về","Index","KhoaHoc")</button>
}
