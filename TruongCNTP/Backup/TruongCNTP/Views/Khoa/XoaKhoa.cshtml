@model TruongCNTP.Models.KHOA

@{
    ViewBag.Title = "Xoá thông tin chi tiết khoa";
    Layout = "~/Views/Shared/layoutAdmin.cshtml";
}

<link href="../../Content/css/cssMain.css" rel="stylesheet" />
<h2 style="color:red;font-size:30px;text-align:center;margin-top:40px">XÓA THÔNG TIN CHI TIẾT KHOA</h2>

<fieldset>
    <legend><font color="green">Chắc chắn xóa chưa?<br />Hãy đảm bảo rằng khoa được xóa đang rỗng!</font></legend>
    <div class="display-label">Mã khoa: @Model.MaKhoa</div>
    <div class="display-label">Tên khoa: @Model.TenKhoa</div>
    <div class="display-label">Năm thành lập: @Model.NamThanhLap</div>
</fieldset>
@using (Html.BeginForm())
{
    <button type="submit">Xóa khoa này</button>
    <button>@Html.ActionLink("Trở về","Index","Khoa")</button>
}