@model TruongCNTP.Models.LOP
@{
    ViewBag.Title = "Xóa thông tin lớp học";
    Layout = "~/Views/Shared/layoutAdmin.cshtml";
}

<link href="../../Content/css/cssMain.css" rel="stylesheet" />
<h2 style="color:red;font-size:30px;text-align:center;margin-top:40px">XÓA THÔNG TIN CHI TIẾT LỚP HỌC</h2>

<fieldset>
    <legend><font color="green">Chắc chắn xóa chưa?<br />Hãy đảm bảo rằng lớp được xóa đang rỗng!</font></legend>
    <div class="display-label">Mã lớp: @Model.MaLop</div>
    <div class="display-label">Tên lớp: @Model.TenLop</div>
    <div class="display-label">Mã khoa: @Model.MaKhoa</div>
    <div class="display-label">Mã khóa học: @Model.MaKhoaHoc</div>
    <div class="display-label">Mã chương trình: @Model.MaCT</div>
</fieldset>
@using (Html.BeginForm())
{
    <button type="submit">Xóa lớp học này</button>
    <button>@Html.ActionLink("Trở về","Index","LopHoc")</button>
}
