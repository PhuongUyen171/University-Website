@model TruongCNTP.Models.LOP
@{
    ViewBag.Title = "Thêm thông tin lớp học";
    Layout = "~/Views/Shared/layoutAdmin.cshtml";
}


<link href="../../Content/css/cssMain.css" rel="stylesheet" />
<h2 style="color:red;font-size:30px;text-align:center;margin-top:40px">THÊM MỚI LỚP HỌC</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table class="table" border="0" align="center" style="text-align:left">
        <tr>
            <td style="font-weight:bold">Tên lớp:</td>
            <td style="text-align:left">@Html.TextBox("tenLop")</td>@ViewData["Loi1"]
        </tr>
        <tr>
            <td style="font-weight:bold">Mã lớp:</td>
            <td style="text-align:left">@Html.TextBox("maLop")</td>@ViewData["Loi2"]
        </tr>
        <tr>
            <td style="font-weight:bold">Mã khoa:</td>
            <td style="text-align:left">@Html.DropDownList("MaKhoa")</td>
        </tr>
        <tr>
            <td style="font-weight:bold">Mã khóa học:</td>
            <td style="text-align:left">@Html.DropDownList("MaKhoaHoc")</td>
        </tr>
        <tr>
            <td style="font-weight:bold">Mã chương trình:</td>
            <td style="text-align:left">@Html.DropDownList("MaCT")</td>
        </tr>
        <tr>
            <td style="font-weight:bold">Số thứ tự:</td>
            <td style="text-align:left">@Html.TextBox("STT")</td>
        </tr>
    </table>
    <button type="submit">Tạo mới</button>
    <button>@Html.ActionLink("Trở về","Index","MonHoc")</button>
}

